<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-bold text-dark">Звітність</h1>
        <p class="text-muted mb-0">Аналіз активності користувачів та використання часу</p>
    </div>
    <button onclick="window.print()" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-printer"></i> Друкувати звіт
    </button>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body p-4">
        <form action="/report" method="GET" class="row align-items-end g-3">
            
            <div class="col-md-3">
                <label class="form-label fw-bold small text-muted">Оберіть дату звіту</label>
                <input type="date" name="date" class="form-control" value="<%= queryDate %>" required>
            </div>
    
            <div class="col-md-3">
                <label class="form-label fw-bold small text-muted">Роль користувача</label>
                <select name="role" class="form-select cursor-pointer">
                    <option value="all" <%= (typeof currentRole === 'undefined' || currentRole === 'all') ? 'selected' : '' %>>Всі ролі</option>
                    <option value="USER" <%= currentRole === 'USER' ? 'selected' : '' %>>Користувачі</option>
                    <option value="HARDWARE_SPECIALIST" <%= currentRole === 'HARDWARE_SPECIALIST' ? 'selected' : '' %>>Техніки</option>
                    <option value="PROGRAMMER" <%= currentRole === 'PROGRAMMER' ? 'selected' : '' %>>Програмісти</option>
                    <option value="OPERATOR" <%= currentRole === 'OPERATOR' ? 'selected' : '' %>>Оператори</option>
                    <option value="DB_ADMIN" <%= currentRole === 'DB_ADMIN' ? 'selected' : '' %>>Адміни</option>
                </select>
            </div>
    
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100 fw-bold">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i> Сформувати
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-header bg-white border-0 pt-4 px-4 pb-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                    <i class="bi bi-calendar2-check-fill fs-4"></i>
                </div>
                
                <div>
                    <h6 class="text-muted text-uppercase fw-bold small mb-1 ls-1">Звіт за дату</h6>
                    <h4 class="mb-0 fw-bold text-dark">
                        <%= new Date(stats.date).toLocaleDateString('uk-UA', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                    </h4>
                </div>
            </div>
    
            <div class="bg-light border border-light rounded-pill py-2 px-4 d-flex align-items-center shadow-sm">
                <div class="d-flex flex-column align-items-end lh-1 me-3">
                    <span class="text-muted small fw-bold text-uppercase" style="font-size: 0.65rem;">Всього сесій</span>
                    <span class="text-dark fw-bold">за цей день</span>
                </div>
                <div class="vr me-3 opacity-25"></div>
                <span class="text-primary fw-bolder fs-3 lh-1">
                    <%= stats.totalSessionsCount %>
                </span>
            </div>
    
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" style="border-collapse: separate; border-spacing: 0;">
                <thead class="bg-light text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 text-muted small fw-bold border-bottom-0" style="width: 80px;">Ранг</th>
                        <th class="py-3 text-muted small fw-bold border-bottom-0">Користувач</th>
                        <th class="py-3 text-muted small fw-bold border-bottom-0">Роль</th>
                        <th class="py-3 text-center text-muted small fw-bold border-bottom-0">Сесії</th>
                        <th class="pe-4 py-3 text-end text-muted small fw-bold border-bottom-0" style="width: 250px;">Час роботи</th>
                    </tr>
                </thead>
                <tbody>
                    <% stats.reportData.forEach((row, index) => { 
                        const rank = (stats.currentPage - 1) * 10 + index + 1;
                        
                        // Розрахунок відсотка для прогрес-бару (відносно лідера)
                        // Припускаємо, що перший у списку має 100% (бо список відсортований)
                        const maxTime = stats.reportData[0]?.totalMs || 1;
                        const percent = Math.round((row.totalMs / maxTime) * 100);
                        
                        // Колір прогрес-бару залежно від часу
                        let barColor = 'bg-primary';
                        if (percent < 30) barColor = 'bg-info';
                        if (percent > 80) barColor = 'bg-success';
                    %>
                        <tr>
                            <td class="ps-4">
                                <% if (rank === 1) { %>
                                    <div class="d-flex align-items-center justify-content-center bg-warning bg-gradient text-white rounded-circle shadow-sm" style="width: 32px; height: 32px; font-weight: bold;">1</div>
                                <% } else if (rank === 2) { %>
                                    <div class="d-flex align-items-center justify-content-center bg-secondary bg-gradient text-white rounded-circle shadow-sm" style="width: 32px; height: 32px; font-weight: bold;">2</div>
                                <% } else if (rank === 3) { %>
                                    <div class="d-flex align-items-center justify-content-center bg-brown text-white rounded-circle shadow-sm" style="width: 32px; height: 32px; font-weight: bold; background-color: #CD7F32;">3</div>
                                <% } else { %>
                                    <div class="text-muted fw-bold ps-2">#<%= rank %></div>
                                <% } %>
                            </td>
            
                            <td>
                                <div class="d-flex align-items-center py-2">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 42px; height: 42px;">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark"><%= row.user.pib %></div>
                                        <div class="small text-muted font-monospace">@<%= row.user.login %></div>
                                    </div>
                                </div>
                            </td>
            
                            <td>
                                <span class="badge bg-light text-secondary border px-3 py-2 fw-normal rounded-pill">
                                    <%= row.user.role %>
                                </span>
                            </td>
            
                            <td class="text-center">
                                <span class="badge bg-white text-dark border shadow-sm rounded-pill px-3">
                                    <%= row.sessionsCount %>
                                </span>
                            </td>
            
                            <td class="pe-4">
                                <div class="d-flex flex-column align-items-end">
                                    <span class="fw-bold text-dark mb-1"><%= row.formattedTime %></span>
                                    <div class="progress w-100" style="height: 6px; background-color: #e9ecef;">
                                        <div class="progress-bar rounded-pill <%= barColor %>" role="progressbar" style="width: <%= percent %>%" aria-valuenow="<%= percent %>" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <% if (stats.reportData.length === 0) { %>
            <div class="text-center py-5 text-muted">
                <i class="bi bi-calendar-x fs-1"></i>
                <p class="mt-2">Немає даних за цю дату</p>
            </div>
        <% } %>
    </div>

    <% if (stats.totalPages > 1) { %>
        <div class="card-footer bg-white border-top py-3">
            <nav>
                <ul class="pagination justify-content-center mb-0">
                    
                    <li class="page-item <%= stats.currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link border-0" 
                           href="/reports?date=<%= queryDate %>&role=<%= currentRole %>&page=<%= stats.currentPage - 1 %>">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
    
                    <% for(let i = 1; i <= stats.totalPages; i++) { %>
                        <li class="page-item <%= stats.currentPage === i ? 'active' : '' %>">
                            <a class="page-link border-0 rounded-circle mx-1" 
                               href="/reports?date=<%= queryDate %>&role=<%= currentRole %>&page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
    
                    <li class="page-item <%= stats.currentPage === stats.totalPages ? 'disabled' : '' %>">
                        <a class="page-link border-0" 
                           href="/reports?date=<%= queryDate %>&role=<%= currentRole %>&page=<%= stats.currentPage + 1 %>">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
    
                </ul>
            </nav>
        </div>
    <% } %>
</div>